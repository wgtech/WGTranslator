<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="project.wgtech.wgtranslator.view.MainActivity" />
        <variable
            name="viewModel"
            type="project.wgtech.wgtranslator.viewmodel.MainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTopMain"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/teal_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerLanguageInputMain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/outline_spinner"
                android:popupBackground="@drawable/outline_spinner_background"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButtonMain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintDimensionRatio="W,1:1"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/round_g_translate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>